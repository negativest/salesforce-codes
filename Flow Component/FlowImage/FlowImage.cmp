<aura:component implements="flexipage:availableForAllPageTypes,lightning:availableForFlowScreens" access="global">
    <aura:attribute name="src" type="String" />
    <aura:attribute name="alt" type="String" />
    <aura:attribute name="style" type="String" default="border-radius: 20px; -webkit-border-radius: 20px; -moz-border-radius: 20px;"/>

    <div aura:id="flow-image" style="text-align:center; ">
    	<img aura:id="MyPicture" src="{!v.src}" alt="{!v.alt}" style="{!v.style}"/>
    </div>

</aura:component>
