<aura:component implements="lightning:availableForFlowScreens" access="global">
    <aura:attribute name="href" type="String" default="https://www.salesforce.com/jp" access="global" />
    <aura:attribute name="message" type="String" default="表示メッセージをしてください" access="global" />
    <div>
        <a href='{!v.href}'>
        	<button class="slds-button slds-button_outline-brand">{!v.message}</button>
        </a>
    </div>
</aura:component>